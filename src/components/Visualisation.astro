const { array } = Astro.props;
import Buttons from '../components/Buttons.astro';
let algorithm = Astro.url.searchParams.get('alg') ?? '';

let Component;

if (algorithm === 'bubble') {
  Component = (await import('./BinarySearch.astro')).default;
} else if (algorithm === 'linear') {
  Component = (await import('./LinearSearch.astro')).default;
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Algorithm Visualizer</title>
  </head>
  <body style="font-family: sans-serif; padding: 2rem;">
    <h1 class="text-white mt-5">ðŸ”¢ Algorithm Visualizer</h1>
    <Buttons />
    {Component ? <Component /> : <p>Select an algorithm above to begin.</p>}
    {array}
  </body>
</html>
